@page
    <div class="container">
        <div>
            <button id="timer">WHoops!</button>
        </div>
        <div>
            <button id="getGrid">GetGrid</button>
        </div>
        <div>
            <label>
                Initialize Passphrase
                <input type="text" id="initkey"/>
            </label>
            <label>
                Columns
                <input type="text" id="columns" />
            </label>
            <label>
                Rows
                <input type="text" id="rows" />
            </label>
            <button id="initGrid">InitGrid</button>
        </div>
        <div>
            <label>
                State
                <input type="text" id="newState"/>
            </label>
            <label>
                X
                <input type="text" id="newX" />
            </label>
            <label>
                Y
                <input type="text" id="newY" />
            </label>
            <button id="updateCell">UpdateCell</button>
        </div>
        <div>
            <button id="getUserInfo">CreateNewUser</button>
            <h1 id="username">UserName</h1>
            <h3 id="userid">UserID</h3>
        </div>
        <div class="row p-1">
            <div class="col-1">Username</div>
            <div class="col-5"><input type="text" id="userInput" /></div>
        </div>
        <div class="row p-1">
            <div class="col-1">Type</div>
            <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
        </div>
        <div class="row p-1">
            <div class="col-6 text-end">
                <input type="button" id="sendButton" value="Chat this B" />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-6">
                <hr />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>
    </div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>